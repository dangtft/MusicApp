<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".activity.ProfileActivity">

    <TextView
        android:id="@+id/mail_user"
        android:layout_width="273dp"
        android:layout_height="34dp"
        android:text="haidang@gmail.com"
        android:textSize="20sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="111dp"
        tools:layout_editor_absoluteY="418dp"
        tools:ignore="MissingConstraints" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="405dp"
        tools:ignore="MissingConstraints">
        <LinearLayout

            android:background="@color/main_pink"
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:orientation="vertical">
            <ImageView
                android:layout_marginTop="35dp"
                android:layout_gravity="center_horizontal"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/icons8_avatar_48"/>
            <TextView
                android:id="@+id/name_user"
                android:layout_marginTop="15dp"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="William"
                android:textColor="#fff"
                android:textStyle="bold"
                android:textSize="21dp"/>
        </LinearLayout>
    </RelativeLayout>

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:srcCompat="@drawable/icons8_mail_50"
        tools:layout_editor_absoluteX="25dp"
        tools:layout_editor_absoluteY="410dp"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:srcCompat="@drawable/icons8_smartphone_50"
        tools:layout_editor_absoluteX="24dp"
        tools:layout_editor_absoluteY="514dp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/phone_user"
        android:layout_width="269dp"
        android:layout_height="39dp"
        android:text="0264736473"
        android:textSize="20sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="113dp"
        tools:layout_editor_absoluteY="520dp"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/changePass"
        android:layout_width="225dp"
        android:layout_height="51dp"
        android:background="@color/main_blue"
        android:text="Đổi mật khẩu ?"
        tools:layout_editor_absoluteX="93dp"
        tools:layout_editor_absoluteY="606dp"
        tools:ignore="MissingConstraints" />


</androidx.constraintlayout.widget.ConstraintLayout>